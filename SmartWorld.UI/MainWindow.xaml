<Window x:Class="SmartWorld.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow">
    <StackPanel Orientation="Vertical">
        <Border BorderBrush="Red" BorderThickness="2" Height="{Binding Height}" Width="{Binding Width}" >
            <Canvas>

            </Canvas>
        </Border>
        <Grid Height="100">
            <Button Content="Start" Command="{Binding StartCommand}" Width="100" Height="50" FontSize="20"/>
        </Grid>
    </StackPanel>
</Window>
